@model IEnumerable<PodcastAggregator.Domain.Producer>

@{
    ViewBag.Title = "Index";
}

<h2> Producers list </h2>

<p>
    @Html.ActionLink("Register new Producer", "Create") | @Html.ActionLink("Update shows","Run", "Updater")
</p>

@if (Model.Count() == 0)
{
    <tr>
        <td colspan="4">
            <hr />
            <h2> No Producer found!</h2>
            <h3>Create a new one by using @Html.ActionLink("Register new Producer", "Create") </h3>
        </td>
    </tr>
}

@if (Model.Count() > 0)
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Url)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Active)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Url)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Active)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new {  id=item.Id  }) |
                    @Html.ActionLink("Details", "Details", new {  id=item.Id }) 
                    
                </td>
            </tr>
        }

    </table>
}